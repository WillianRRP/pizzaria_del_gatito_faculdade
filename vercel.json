{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.13" 
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/admin",
      "dest": "/templates/admin.html"
    },
    {
      "src": "/admin.html",
      "dest": "/templates/admin.html"
    },
    {
      "src": "/debug.html",
      "dest": "/templates/debug.html"
    },
    {
      "src": "/test.html",
      "dest": "/templates/test.html"
    },
    {
      "src": "/test-simple.html",
      "dest": "/templates/test-simple.html"
    },
    {
      "src": "/",
      "dest": "/templates/index.html"
    }
  ],
  "env": {
 "DATABASE_URL": "postgresql://postgres:Admin1234@db.crmpktnykjormuarccfs.supabase.co:5432/postgres",
  "SECRET_KEY": "minha_chave_super_secreta_123"
  },
  "outputDirectory": "."
}